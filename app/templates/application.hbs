<h2 id='title'>EmberCalc</h2>


<div class="container">
  <div class="row">
    <div class="col-md-4">{{input type="text" id="my-display" value=myDisplay placeholder="" action="updateDisplay"}}</div>
  </div>
  <div class="row">
    <div {{action "clear"}} class="col-md-1">C</div>
    <div class="col-md-1"></div>
    <div class="col-md-1"></div>
    <div {{action "divide"}} class="col-md-1">/</div>
  </div>
  <div class="row">
    <div {{action "seven"}} class="col-md-1">7</div>
    <div {{action "eight"}} class="col-md-1">8</div>
    <div {{action "nine"}} class="col-md-1">9</div>
    <div {{action "multiply"}} class="col-md-1">*</div>
  </div>
  <div class="row">
    <div {{action "four"}} class="col-md-1">4</div>
    <div {{action "five"}} class="col-md-1">5</div>
    <div {{action "six"}} class="col-md-1">6</div>
    <div {{action "minus"}} class="col-md-1">-</div>
  </div>
  <div class="row">
    <div {{action "one"}} class="col-md-1">1</div>
    <div {{action "two"}} class="col-md-1">2</div>
    <div {{action "three"}} class="col-md-1">3</div>
    <div {{action "plus"}} class="col-md-1">+</div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div {{action "zero"}} class="col-md-1">0</div>
    <div {{action "decimal"}} class="col-md-1">.</div>
    <div {{action "equals"}} class="col-md-1">=</div>
  </div>
</div>
